    android:layout_height="match_parent">

    <Button
        android:id="@+id/bt_result_test"
        android:text="RESULT-Test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/mIV"
        android:layout_width="80dp"
        android:layout_height="80dp"
        />

    <Button
        android:id="@+id/bt_result_combo"
        android:text="RESULT-Combo-Test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_result_combo_easy"
        android:text="RESULT-Combo-Easy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_result_dispatch"
        android:text="RESULT-dispatch- 一对多 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt_result_dispatch2"
