<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/bt"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="launch PrivateProcessAc"/>

    <Button
        android:id="@+id/bt2"
        app:layout_constraintTop_toBottomOf="@id/bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="launch GloableProcessAc"/>

    <Button
        android:id="@+id/bt3"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="change Gloable TAG "/>

    <TextView
        android:id="@+id/tvIntent"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>